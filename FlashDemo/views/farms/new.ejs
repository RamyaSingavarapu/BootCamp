<body>
    <h1>Add A Farm</h1>

    <form action="/farms" method="POST">
        <div>
            <label for="name">Farm</label>
            <input type="text" id="name" name="name" placeholder="farm name">
        </div>
        <div>
            <label for="city">City</label>
            <input type="text" id="city" name="city" placeholder="city">
        </div>
        <div>
