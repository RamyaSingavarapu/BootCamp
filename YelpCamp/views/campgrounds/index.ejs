<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Make A New Campground</a>
    </div>
    <% for(let campgrounds of campground ) { %>
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4">
                    <% if(campgrounds.images.length) { %>
                    <img class="img-fluid" alt="" src="<%= campgrounds.images[0].url %>">
                    <% }else{ %> 
                        <img class="img-fluid" alt="" src="https://rukminim2.flixcart.com/image/850/1000/ku4ezrk0/hair-extension/q/i/8/dummy-for-face-make-up-practice-hair-dummy-for-hair-styling-hair-original-imag7bdzzbassqff.jpeg?q=90&crop=false">
                        <% } %>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campgrounds.title %>
                        </h5>
                        <p class="card-text">
                            <%= campgrounds.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campgrounds.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id %>">View <%= campgrounds.title
                                %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
<script>
const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
const campgrounds= {features: <%- JSON.stringify(campground)%> };
</script>

<script src="/javascripts/clusterMap.js"></script>